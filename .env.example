# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/axum_db

# Server Configuration
# Host address to bind the server (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_HOST=0.0.0.0

# Port number for the HTTP server
SERVER_PORT=3000

# Logging Configuration
# Log level: error, warn, info, debug, trace
RUST_LOG=info

# Development Environment Variables
# Uncomment and modify for development
# RUST_LOG=debug
# SERVER_HOST=127.0.0.1

# Production Environment Variables
# Uncomment and modify for production deployment
# DATABASE_URL=postgresql://prod_user:secure_password@prod_host:5432/prod_database
# SERVER_HOST=0.0.0.0
# SERVER_PORT=3000
# RUST_LOG=warn

# Docker Compose Environment Variables
# These are used when running with docker-compose.dev.yml
# DATABASE_URL=postgresql://postgres:password@postgres:5432/axum_db
# SERVER_HOST=0.0.0.0
# SERVER_PORT=3000
# RUST_LOG=debug